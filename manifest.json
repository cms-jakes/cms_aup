{
	"manifest_version": 2,
	
	"name":"CMS AUP for Secondary Students",
	"description":"Acceptable Use Policy Agreement for Charlotte-Mecklenburg Schools secondary students.",
	"version": "2.0.0",

	"browser_action":{
		"default_icon":"images/icon.png",
		"default_title":"CMS Secondary AUP",
		"default_popup":"popup.html"
	},
	"permissions":[       
		"activeTab",
		"tabs",
		"identity", 
		"identity.email",
		"management",
		"storage",
		"notifications",
		"https://ajax.googleapis.com/" 
	],
	"background":{
		"persistent":false,
		"scripts":[
			"background.js"
		]
	},
  	"web_accessible_resources": [
    	"images/icon.png",
    	"aup.html"
  		]
}
